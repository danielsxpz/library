<h1>Altere sua Senha Provisória</h1>
<p>Por segurança, você precisa definir uma nova senha para continuar.</p>

<%= form_with model: @user, url: change_password_path, method: :patch do |form| %>
  <% if @user.errors.any? %>
    <div style="color: red">
      <h2>Erros:</h2>
      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :password, "Nova Senha" %><br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation, "Confirme a Nova Senha" %><br>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.submit "Salvar Nova Senha" %>
  </div>
<% end %>